@model IEnumerable<FSWDFinalProject.DATA.EF.StudioLocation>

@{
    ViewBag.Title = "Studio Locations";
}

<h2 id="title">@ViewBag.Title</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudioName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        @if (User.IsInRole("Admin"))
        {
            <th>
                @Html.DisplayNameFor(model => model.SessionLimit)
            </th>
            
        }
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudioName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.SessionLimit)
                </td>
            }
          
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.StudioID })


                @if (User.IsInRole("Admin"))
                {
                    @:|  @Html.ActionLink("Edit", "Edit", new { id = item.StudioID })
                    @:|  @Html.ActionLink("Delete", "Delete", new { id = item.StudioID })

                }

            </td>
        </tr>

    }
</table>
