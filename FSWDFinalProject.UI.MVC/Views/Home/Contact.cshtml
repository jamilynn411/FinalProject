@model FSWDFinalProject.UI.MVC.Models.ContactViewModel

@{
    ViewBag.Title = "Contact Us";
}

<h2>@ViewBag.Title</h2>

<div id="contactpage">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group col-md-6">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group col-md-6">
            @Html.TextBoxFor(x => x.Email, new
       {
           @class = "form-control",
           placeholder = "Email",
           title = "Your email will be kept confidential"
       })
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="form-group col-md-12">
            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Subject" })
            @Html.ValidationMessageFor(x => x.Subject)
        </div>

        <div class="form-group col-md-12">
            @Html.TextAreaFor(x => x.Message, new
                       {
                           @class = "form-control",
                           id = "message",
                           rows = "8",
                           placeholder = "Your Message Here",
                           title = "Be concise but include all improtant details"
                       })
            @Html.ValidationMessageFor(x => x.Message)
        </div>

                        <div class="form-group col-md-12">
                            <input type="submit" name="submit"
                                   class="btn btn-primary pull-right"
                                   value="Submit" />
                        </div>
    }
</div>

<div>
    <address>
        8875 Furry Drive<br />
        Overland Park, KS<br />
        <abbr title="Phone">P:</abbr>
        785-250-7505
    </address>

    <address>
        <i class="icon-envelope"></i><strong>Support:</strong>   <a href="mailto:FurryFotosInc@mail.com">FurryFotosInc@mail.com</a><br />
    </address>
</div>