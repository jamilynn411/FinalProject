@{
    ViewBag.Title = "Home Page";
}

<header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner"
        style="background-image: url(/Content/Images/Zeus.jpg);margin-top:-6em;" data-stellar-background-ratio="0.5">

    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-left">

                <div class="row row-mt-15em">
                    <div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp">
                        @*<span class="intro-text-small">Hand-crafted by <a href="http://gettemplates.co" target="_blank">GetTemplates.co</a></span>
                            <h1 class="cursive-font">All in good taste!</h1>*@
                    </div>
                    <div class="col-md-4 col-md-push-1 animate-box" data-animate-effect="fadeInRight">
                        <div class="form-wrap">
                            <div class="tab">

                                <div class="tab-content">
                                    <div class="tab-content-inner active" data-content="signup">
                                        <h3 class="row">Welcome!</h3>
                                        <form action="#">
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <h2 class="glyphicon-asterisk">&nbsp; Furry Fotos Inc. is a fully-functioning reservation photography site.</h2>
                                                    <h2 class="glyphicon-asterisk">&nbsp; We have recently expanded and are seeking new clients!</h2>

                                                    <div class="row form-group">
                                                        <div class="col-md-12">
                                                            @if (User.Identity.IsAuthenticated)
                                                            {
                                                                <a style="color:white; font-size:28px;font-family:'Shadows Into Light','Agency FB';"
                                                                   class="btn btn-primary btn-block" href="@Url.Action("Create", "Reservations")"><strong>Reserve Now</strong></a>
                                                            }
                                                            else
                                                            {
                                                                <a style="color:white;"
                                                                   class="btn btn-primary btn-block"
                                                                   href="@Url.Action("Login", "Account")">Log In To Reserve</a>
                                                            }
                                                            @*<input type="submit" class="btn btn-primary btn-block" onclick="$(alert= "You must be registered to book a session")"value="Reserve Now">*@


                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</header>


<div id="gtco-features">
    <div class="gtco-container">
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                <h2 class="cursive-font">About</h2>
                <p>Check out everything that made this site possible!</p>
                <a style="color:white;"
                   class="btn btn-primary btn-block" href="@Url.Action("About", "Home")">Learn More</a>
            </div>
        </div>
    </div>
</div>
