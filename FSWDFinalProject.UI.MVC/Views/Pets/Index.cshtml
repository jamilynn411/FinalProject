@model IEnumerable<FSWDFinalProject.DATA.EF.Pet>

@{
    ViewBag.Title = "Pets";
}

<h2>@ViewBag.Title</h2>
@if (User.IsInRole("Admin") || User.IsInRole("Customer"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table @*class="table"*@ style="width:95%; margin:auto;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.SpecialNotes)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.OwnerID)
        </th>*@
        
        @if (User.IsInRole("Admin") || User.IsInRole("Photographer"))
        {
            @*<th>
                @Html.DisplayNameFor(model => model.PetID)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
        }

        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            @*<td>
                @Html.DisplayFor(modelItem => item.SpecialNotes)
            </td>*@
            @if (User.IsInRole("Admin") || User.IsInRole("Photographer"))
                {
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.FirstName)
                    @Html.DisplayFor(modelItem => item.AspNetUser.LastName)
                </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.PetID)
                    </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>

            }

            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>

            <td>

                @if (User.IsInRole("Admin") || User.IsInRole("Customer"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.PetID }) @:|
                    @Html.ActionLink("Details", "Details", new { id = item.PetID })
                    @:| @Html.ActionLink("Delete", "Delete", new { id = item.PetID })
                }
            </td>
        </tr>
    }

</table>
